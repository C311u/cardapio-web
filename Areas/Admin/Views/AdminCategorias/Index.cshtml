@model IEnumerable<CardapioWeb.Models.Categoria> //identifica que é uma lista de categoria

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-area"Admin" asp-controller="AdminCategoriasController"
    asp-action="Cadastro"
    >Adicionar nova categoria</a> @*procura pelo método cadastro*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <a asp-area"Admin" asp-controller="AdminCategorias" asp-action="Edicao" asp-route-id="@item.Id">Editar</a> |
                    <a asp-area"Admin" asp-controller="AdminCategorias" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-area"Admin" asp-controller="AdminCategorias" asp-action="Delete" asp-route-id="@item.Id">Exluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
